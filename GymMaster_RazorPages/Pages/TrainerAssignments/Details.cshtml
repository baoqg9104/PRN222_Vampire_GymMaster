@page
@using Microsoft.AspNetCore.Components
@model GymMaster_RazorPages.Pages.TrainerAssignments.DetailsModel

@{
    ViewData["Title"] = "Trainer Assignment Details";
}
<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f8f9fa;
    }
    .card {
        border-radius: 1rem;
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
    }
    .card-header {
        font-size: 1.25rem;
        font-weight: 600;
    }
    .details-label {
        color: #007bff;
        font-weight: 500;
    }
    .details-value {
        font-size: 1.1rem;
    }
</style>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    Trainer Assignment Details
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 details-label"><i class="bi bi-calendar-date"></i> Start Date</dt>
                        <dd class="col-sm-8 details-value">
                            @Model.TrainerAssignment.StartDate.ToString("yyyy-MM-dd")
                        </dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-calendar2-date"></i> End Date</dt>
                        <dd class="col-sm-8 details-value">
                            @(Model.TrainerAssignment.EndDate.HasValue
                                                        ? Model.TrainerAssignment.EndDate.Value.ToString("yyyy-MM-dd")
                                                        : (MarkupString)"None")
                        </dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-bullseye"></i> Goals</dt>
                        <dd class="col-sm-8 details-value">
                            @(!string.IsNullOrWhiteSpace(Model.TrainerAssignment.Goals)
                                                        ? Model.TrainerAssignment.Goals
                                                        : (MarkupString)"None")
                        </dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-toggle-on"></i> Status</dt>
                        <dd class="col-sm-8 details-value">
                            @if (Model.TrainerAssignment.IsActive == true)
                            {
                                <span class="badge bg-success px-3 py-2">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary px-3 py-2">Inactive</span>
                            }
                        </dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-person"></i> Member</dt>
                        <dd class="col-sm-8 details-value">
                            @if (Model.TrainerAssignment.Member?.Email != null)
                            {
                                @Model.TrainerAssignment.Member.Email
                            }
                            else
                            {
                                @((MarkupString)"None")
                            }
                        </dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-card-checklist"></i> Membership</dt>
                        <dd class="col-sm-8 details-value">
                            @if (Model.TrainerAssignment.Membership?.MembershipId != null)
                            {
                                @Model.TrainerAssignment.Membership.MembershipId.ToString()
                            }
                            else
                            {
                                @((MarkupString)"None")
                            }
                        </dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-person-badge"></i> Trainer</dt>
                        <dd class="col-sm-8 details-value">
                            @if (!string.IsNullOrWhiteSpace(Model.TrainerAssignment.Trainer?.Email))
                            {
                                @Model.TrainerAssignment.Trainer.Email
                            }
                            else
                            {
                                @((MarkupString)"None")
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-light d-flex justify-content-end">
                    <a asp-page="./Edit" asp-route-id="@Model.TrainerAssignment.AssignmentId" class="btn btn-outline-primary rounded-pill me-2">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
