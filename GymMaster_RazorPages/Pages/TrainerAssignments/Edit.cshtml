@page
@model GymMaster_RazorPages.Pages.TrainerAssignments.EditModel

@{
    ViewData["Title"] = "Edit Trainer Assignment";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">
        <i class="bi bi-pencil-square"></i> Edit Trainer Assignment
    </h1>

    <div class="card border-primary shadow-sm">
        <div class="card-header bg-primary bg-opacity-10 fw-bold">
            <i class="bi bi-tools"></i> Assignment Details
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="TrainerAssignment.AssignmentId" />

                <div class="mb-3">
                    <label asp-for="TrainerAssignment.MemberId" class="form-label">
                        <i class="bi bi-person"></i> Member
                    </label>
                    <select asp-for="TrainerAssignment.MemberId" class="form-select"
                        asp-items="ViewBag.MemberId"></select>
                    <span asp-validation-for="TrainerAssignment.MemberId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TrainerAssignment.TrainerId" class="form-label">
                        <i class="bi bi-person-badge"></i> Trainer
                    </label>
                    <select asp-for="TrainerAssignment.TrainerId" class="form-select"
                        asp-items="ViewBag.TrainerId"></select>
                    <span asp-validation-for="TrainerAssignment.TrainerId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TrainerAssignment.MembershipId" class="form-label">
                        <i class="bi bi-card-checklist"></i> Membership
                    </label>
                    <select asp-for="TrainerAssignment.MembershipId" class="form-select"
                        asp-items="ViewBag.MembershipId"></select>
                    <span asp-validation-for="TrainerAssignment.MembershipId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TrainerAssignment.StartDate" class="form-label">
                        <i class="bi bi-calendar-date"></i> Start Date
                    </label>
                    <input asp-for="TrainerAssignment.StartDate" class="form-control" type="date" />
                    <span asp-validation-for="TrainerAssignment.StartDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TrainerAssignment.EndDate" class="form-label">
                        <i class="bi bi-calendar2-date"></i> End Date
                    </label>
                    <input asp-for="TrainerAssignment.EndDate" class="form-control" type="date" />
                    <span asp-validation-for="TrainerAssignment.EndDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TrainerAssignment.Goals" class="form-label">
                        <i class="bi bi-bullseye"></i> Goals
                    </label>
                    <input asp-for="TrainerAssignment.Goals" class="form-control" />
                    <span asp-validation-for="TrainerAssignment.Goals" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TrainerAssignment.IsActive" class="form-label">
                        <i class="bi bi-toggle-on"></i> Active
                    </label>
                    <select asp-for="TrainerAssignment.IsActive" class="form-select">
                        <option value="">-- Select Status --</option>
                        <option value="true"
                            selected="@((Model.TrainerAssignment.IsActive ?? false) ? "selected" : null)">Active</option>
                        <option value="false"
                            selected="@((Model.TrainerAssignment.IsActive == false) ? "selected" : null)">Inactive
                        </option>
                    </select>
                    <span asp-validation-for="TrainerAssignment.IsActive" class="text-danger"></span>
                </div>

                <div class="text-end mt-4">
                    <input type="submit" value="💾 Save Changes" class="btn btn-success rounded-pill me-2" />
                    <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
