@page
@model GymMaster_RazorPages.Pages.TrainerAssignments.DeleteModel

@{
    ViewData["Title"] = "Delete Trainer Assignment";
}
<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f8f9fa;
    }
    .card {
        border-radius: 1rem;
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
    }
    .card-header {
        font-size: 1.25rem;
        font-weight: 600;
    }
    .details-label {
        color: #dc3545;
        font-weight: 500;
    }
        .details-value {
        font-size: 1.1rem;
    }
</style>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white d-flex align-items-center">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    Confirm Delete Trainer Assignment
                </div>
                <div class="card-body">
                    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                        <i class="bi bi-exclamation-circle-fill me-2"></i>
                        <div>
                            Are you sure you want to delete this trainer assignment? This action cannot be undone.
                        </div>
                    </div>
                    <dl class="row mb-0">
                        <dt class="col-sm-4 details-label"><i class="bi bi-calendar-date"></i> Start Date</dt>
                        <dd class="col-sm-8 details-value">@Model.TrainerAssignment.StartDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-calendar2-date"></i> End Date</dt>
                        <dd class="col-sm-8 details-value">
                            @(Model.TrainerAssignment.EndDate.HasValue ? Model.TrainerAssignment.EndDate.Value.ToString("yyyy-MM-dd") : "None")
                        </dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-bullseye"></i> Goals</dt>
                        <dd class="col-sm-8 details-value">
                            @(!string.IsNullOrWhiteSpace(Model.TrainerAssignment.Goals) ? Model.TrainerAssignment.Goals : "None")
                        </dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-toggle-on"></i> Status</dt>
                        <dd class="col-sm-8 details-value">
                            @if (Model.TrainerAssignment.IsActive == true)
                            {
                                <span class="badge bg-success px-3 py-2">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary px-3 py-2">Inactive</span>
                            }
                        </dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-person"></i> Member</dt>
                        <dd class="col-sm-8 details-value">
                            @(Model.TrainerAssignment.Member?.Email ?? "None")
                        </dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-card-checklist"></i> Membership</dt>
                        <dd class="col-sm-8 details-value">
                            @(Model.TrainerAssignment.Membership?.MembershipId.ToString() ?? "None")
                        </dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-person-badge"></i> Trainer</dt>
                        <dd class="col-sm-8 details-value">
                            @(Model.TrainerAssignment.Trainer?.Email ?? "None")
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-light d-flex justify-content-end">
                    <form method="post" class="me-2">
                        <input type="hidden" asp-for="TrainerAssignment.AssignmentId" />
                        <button type="submit" class="btn btn-danger rounded-pill me-2">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill">
                            <i class="bi bi-arrow-left-circle"></i> Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
