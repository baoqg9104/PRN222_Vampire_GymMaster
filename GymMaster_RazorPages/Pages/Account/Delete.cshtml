@page
@model GymMaster_RazorPages.Pages.Account.DeleteModel

@{
    ViewData["Title"] = "Delete User";
}
<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f8f9fa;
    }
    .card {
        border-radius: 1rem;
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
    }
    .card-header {
        font-size: 1.25rem;
        font-weight: 600;
    }
    .details-label {
        color: #dc3545;
        font-weight: 500;
    }
    .details-value {
        font-size: 1.1rem;
    }
</style>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white d-flex align-items-center">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    Confirm Delete User
                </div>
                <div class="card-body">
                    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                        <i class="bi bi-exclamation-circle-fill me-2"></i>
                        <div>
                            Are you sure you want to delete this user? This action cannot be undone.
                        </div>
                    </div>
                    <dl class="row mb-0">
                        <dt class="col-sm-4 details-label"><i class="bi bi-envelope"></i> Email</dt>
                        <dd class="col-sm-8 details-value">@Model.User.Email</dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-person"></i> First Name</dt>
                        <dd class="col-sm-8 details-value">@Model.User.FirstName</dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-person"></i> Last Name</dt>
                        <dd class="col-sm-8 details-value">@Model.User.LastName</dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-telephone"></i> Phone</dt>
                        <dd class="col-sm-8 details-value">@Model.User.Phone</dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-person-badge"></i> Role</dt>
                        <dd class="col-sm-8 details-value">@Model.User.Role</dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-award"></i> Specialization</dt>
                        <dd class="col-sm-8 details-value">@Model.User.Specialization</dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-patch-check"></i> Certification</dt>
                        <dd class="col-sm-8 details-value">@Model.User.Certification</dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-currency-dollar"></i> Hourly Rate</dt>
                        <dd class="col-sm-8 details-value">@Model.User.HourlyRate</dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-bullseye"></i> Fitness Goals</dt>
                        <dd class="col-sm-8 details-value">@Model.User.FitnessGoals</dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-file-earmark-medical"></i> Medical Notes</dt>
                        <dd class="col-sm-8 details-value">@Model.User.MedicalNotes</dd>

                        <dt class="col-sm-4 details-label"><i class="bi bi-calendar"></i> Created At</dt>
                        <dd class="col-sm-8 details-value">@Model.User.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</dd>
                    </dl>
                </div>
                <div class="card-footer bg-light d-flex justify-content-end">
                    <form method="post" class="me-2">
                        <input type="hidden" asp-for="User.UserId" />
                        <button type="submit" class="btn btn-danger rounded-pill me-2">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill">
                            <i class="bi bi-arrow-left-circle"></i> Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
