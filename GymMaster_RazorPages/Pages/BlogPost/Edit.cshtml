@page
@model GymMaster_RazorPages.Pages.BlogPost.EditModel


@{
    ViewData["Title"] = "Edit Blog Post";
    var categories = new List<string> { "Nutrition", "Workout", "Lifestyle" };
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Edit Blog Post</h4>
                        <a asp-page="Index" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back to List
                        </a>
                    </div>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        @* <p>@Model.BlogPost.PostId</p> *@
                        @* <p>@Model.BlogPost.AuthorId</p> *@

                        <input type="hidden" asp-for="BlogPost.PostId" />
                        <input type="hidden" asp-for="BlogPost.AuthorId" />
                        <input type="hidden" asp-for="BlogPost.PublishedAt" />
                        <input type="hidden" asp-for="BlogPost.CreatedAt" />


                        <div class="mb-3">
                            <label asp-for="BlogPost.Title" class="form-label">Post Title</label>
                            <input asp-for="BlogPost.Title" class="form-control" placeholder="Enter post title" />
                            <span asp-validation-for="BlogPost.Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BlogPost.Content" class="form-label">Content</label>
                            <textarea asp-for="BlogPost.Content" class="form-control" rows="8"
                                      placeholder="Write your post content here..."></textarea>
                            <span asp-validation-for="BlogPost.Content" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BlogPost.Category" class="form-label">Category</label>
                            <select asp-for="BlogPost.Category" class="form-control">
                                <option value="">-- Select Category --</option>
                                @foreach (var category in categories)
                                {
                                    <option value="@category">@category</option>
                                }
                            </select>
                            <span asp-validation-for="BlogPost.Category" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="BlogPost.IsPublished" class="form-label">Status</label>
                            <select asp-for="BlogPost.IsPublished" class="form-control">
                                <option value="true">Published</option>
                                <option value="false">Hidden</option>
                            </select>
                            <span asp-validation-for="BlogPost.IsPublished" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                Edit Post
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
