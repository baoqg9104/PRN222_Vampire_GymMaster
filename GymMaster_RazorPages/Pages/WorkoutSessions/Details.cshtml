@page
@model GymMaster_RazorPages.Pages.WorkoutSessions.DetailsModel

@{
    ViewData["Title"] = "🔍 Workout Session Details";
}

<div class="container mt-5">
    <h1 class="text-center text-warning mb-4">
        <i class="bi bi-eye-fill"></i> Workout Session Overview
    </h1>

    <div class="card shadow-sm border-warning">
        <div class="card-header bg-warning bg-opacity-10 fw-bold">
            <i class="bi bi-clipboard2-data"></i> Session Information
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-md-3"><i class="bi bi-clock-history"></i> Completed At</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.WorkoutSession.CompletedAt)</dd>

                <dt class="col-md-3"><i class="bi bi-repeat"></i> Actual Sets</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.WorkoutSession.ActualSets)</dd>

                <dt class="col-md-3"><i class="bi bi-arrow-repeat"></i> Actual Reps</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.WorkoutSession.ActualReps)</dd>

                <dt class="col-md-3"><i class="bi bi-scales"></i> Actual Weight</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.WorkoutSession.ActualWeight)</dd>

                <dt class="col-md-3"><i class="bi bi-chat-left-text"></i> Notes</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.WorkoutSession.Notes)</dd>

                <dt class="col-md-3"><i class="bi bi-star-half"></i> Rating</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.WorkoutSession.Rating)</dd>

                <dt class="col-md-3"><i class="bi bi-envelope"></i> Member</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.WorkoutSession.Member.Email)</dd>

                <dt class="col-md-3"><i class="bi bi-dumbbell"></i> Exercise</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.WorkoutSession.Plan.ExerciseName)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 text-end">
        <a asp-page="./Edit" asp-route-id="@Model.WorkoutSession.SessionId"
           class="btn btn-warning rounded-pill shadow-sm me-2">
            <i class="bi bi-pencil-fill"></i> Edit
        </a>
        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill shadow-sm">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>
