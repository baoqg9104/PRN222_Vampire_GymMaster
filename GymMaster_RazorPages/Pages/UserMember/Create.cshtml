@page
@model GymMaster_RazorPages.Pages.UserMember.CreateModel

@{
    ViewData["Title"] = "Create Membership";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Create User Membership</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

                <div class="mb-3">
                    <label asp-for="UserMembership.UserId" class="form-label">User</label>
                    <select asp-for="UserMembership.UserId" class="form-select" asp-items="Model.UserList">
                        <option value="">-- Select User --</option>
                    </select>
                    <span asp-validation-for="UserMembership.UserId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UserMembership.PlanId" class="form-label">Plan</label>
                    <select asp-for="UserMembership.PlanId" class="form-select" asp-items="Model.PlanList">
                        <option value="">-- Select Plan --</option>
                    </select>
                    <span asp-validation-for="UserMembership.PlanId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UserMembership.StartDate" class="form-label">Start Date</label>
                    <input asp-for="UserMembership.StartDate" class="form-control" type="date" />
                    <span asp-validation-for="UserMembership.StartDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UserMembership.EndDate" class="form-label">End Date</label>
                    <input asp-for="UserMembership.EndDate" class="form-control" type="date" />
                    <span asp-validation-for="UserMembership.EndDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UserMembership.IsActive" class="form-label">Is Active</label>
                    <select asp-for="UserMembership.IsActive" class="form-select">
                        <option value="">-- Select Status --</option>
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                    <span asp-validation-for="UserMembership.IsActive" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UserMembership.AutoRenew" class="form-label">Auto Renew</label>
                    <select asp-for="UserMembership.AutoRenew" class="form-select">
                        <option value="">-- Select Option --</option>
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                    <span asp-validation-for="UserMembership.AutoRenew" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <input type="submit" value="Create Membership" class="btn btn-success" />
                </div>
            </form>
        </div>
        <div class="card-footer text-end">
            <a asp-page="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
