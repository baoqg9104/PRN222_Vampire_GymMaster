@page
@model GymMaster_RazorPages.Pages.UserMember.DeleteModel

@{
    ViewData["Title"] = "🗑️ Delete Membership";
}

<div class="container mt-5">
    <h1 class="text-center text-danger mb-3">
        <i class="bi bi-trash-fill"></i> Confirm Membership Deletion
    </h1>

    <div class="alert alert-warning text-center fw-semibold">
        <i class="bi bi-exclamation-triangle-fill text-danger"></i>
        Are you sure you want to delete this membership?
    </div>

    <div class="card border-danger shadow-sm mb-4">
        <div class="card-header bg-danger bg-opacity-10 fw-bold">
            <i class="bi bi-person-check"></i> Membership Details
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3"><i class="bi bi-calendar-event"></i> Start Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserMembership.StartDate)</dd>

                <dt class="col-sm-3"><i class="bi bi-calendar-x"></i> End Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserMembership.EndDate)</dd>

                <dt class="col-sm-3"><i class="bi bi-toggle-on"></i> Active</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserMembership.IsActive)</dd>

                <dt class="col-sm-3"><i class="bi bi-arrow-repeat"></i> Auto Renew</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserMembership.AutoRenew)</dd>

                <dt class="col-sm-3"><i class="bi bi-card-checklist"></i> Plan</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserMembership.Plan.Name)</dd>

                <dt class="col-sm-3"><i class="bi bi-envelope"></i> User Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserMembership.User.Email)</dd>
            </dl>
        </div>
    </div>

    <form method="post" class="text-end">
        <input type="hidden" asp-for="UserMembership.MembershipId" />
        <button type="submit" class="btn btn-danger rounded-pill fw-bold shadow-sm">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill ms-2 shadow-sm">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </form>
</div>
