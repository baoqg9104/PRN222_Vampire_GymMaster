@page
@model GymMaster_RazorPages.Pages.UserMember.DetailsModel

@{
    ViewData["Title"] = "👤 Membership Details";
}

<div class="container mt-5">
    <h1 class="text-center text-info mb-4">
        <i class="bi bi-eye-fill"></i> Membership Overview
    </h1>

    <div class="card shadow-sm border-info">
        <div class="card-header bg-info bg-opacity-10 fw-bold">
            <i class="bi bi-person-check"></i> Membership Information
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-md-3"><i class="bi bi-calendar-event"></i> Start Date</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.UserMembership.StartDate)</dd>

                <dt class="col-md-3"><i class="bi bi-calendar-x"></i> End Date</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.UserMembership.EndDate)</dd>

                <dt class="col-md-3"><i class="bi bi-toggle-on"></i> Active</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.UserMembership.IsActive)</dd>

                <dt class="col-md-3"><i class="bi bi-arrow-repeat"></i> Auto Renew</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.UserMembership.AutoRenew)</dd>

                <dt class="col-md-3"><i class="bi bi-card-checklist"></i> Plan</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.UserMembership.Plan.Name)</dd>

                <dt class="col-md-3"><i class="bi bi-envelope"></i> User Email</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.UserMembership.User.Email)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 text-end">
        <a asp-page="./Edit" asp-route-id="@Model.UserMembership.MembershipId"
           class="btn btn-primary rounded-pill shadow-sm me-2">
            <i class="bi bi-pencil-fill"></i> Edit
        </a>
        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill shadow-sm">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>
