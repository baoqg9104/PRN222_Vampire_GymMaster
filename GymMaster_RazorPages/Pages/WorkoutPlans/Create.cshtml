@page
@model GymMaster_RazorPages.Pages.WorkoutPlans.CreateModel

@{
    ViewData["Title"] = "🏗️ Create Workout Plan";
}

<div class="container mt-5">
    <h1 class="text-center text-success mb-4">
        <i class="bi bi-journal-plus"></i> Create New Plan
    </h1>

    <div class="card shadow-sm border-primary">
        <div class="card-body bg-light">
            <h4 class="text-primary fw-bold mb-3">
                <i class="bi bi-pencil-square"></i> Fill in the Plan Details
            </h4>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                @* <div class="mb-3">
                    <label asp-for="WorkoutPlan.AssignmentId" class="form-label">
                        <i class="bi bi-journal-text"></i> Assignment
                    </label>
                    <select asp-for="WorkoutPlan.AssignmentId" class="form-select" asp-items="Model.List"></select>
                </div> *@
                <div class="mb-3">
                    <label asp-for="WorkoutPlan.AssignmentId" class="form-label">
                        <i class="bi bi-journal-text"></i> Assignment
                    </label>
                    @if (Model.WorkoutPlan.AssignmentId > 0)
                    {
                        <input type="hidden" asp-for="WorkoutPlan.AssignmentId" />
                        <input class="form-control"
                               value="@Model.List.FirstOrDefault(x => x.Value == Model.WorkoutPlan.AssignmentId.ToString())?.Text"
                               readonly />
                    }
                    else
                    {
                        <select asp-for="WorkoutPlan.AssignmentId" class="form-select" asp-items="Model.List"></select>
                    }
                </div>

                <div class="mb-3">
                    <label asp-for="WorkoutPlan.DayOfWeek" class="form-label">
                        <i class="bi bi-calendar-week"></i> Day of Week
                    </label>
                    <input asp-for="WorkoutPlan.DayOfWeek" class="form-control" />
                    <span asp-validation-for="WorkoutPlan.DayOfWeek" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="WorkoutPlan.ExerciseName" class="form-label">
                        <i class="bi bi-dumbbell"></i> Exercise Name
                    </label>
                    <input asp-for="WorkoutPlan.ExerciseName" class="form-control" />
                    <span asp-validation-for="WorkoutPlan.ExerciseName" class="text-danger"></span>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="WorkoutPlan.Sets" class="form-label">
                            <i class="bi bi-repeat"></i> Sets
                        </label>
                        <input asp-for="WorkoutPlan.Sets" class="form-control" />
                        <span asp-validation-for="WorkoutPlan.Sets" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="WorkoutPlan.Reps" class="form-label">
                            <i class="bi bi-arrow-repeat"></i> Reps
                        </label>
                        <input asp-for="WorkoutPlan.Reps" class="form-control" />
                        <span asp-validation-for="WorkoutPlan.Reps" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-3">
                    <label asp-for="WorkoutPlan.Notes" class="form-label">
                        <i class="bi bi-chat-left-text"></i> Notes
                    </label>
                    <input asp-for="WorkoutPlan.Notes" class="form-control" />
                    <span asp-validation-for="WorkoutPlan.Notes" class="text-danger"></span>
                </div>

                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-success rounded-pill shadow-sm fw-semibold">
                        <i class="bi bi-check2-circle"></i> Create Plan
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary ms-2 rounded-pill shadow-sm">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
