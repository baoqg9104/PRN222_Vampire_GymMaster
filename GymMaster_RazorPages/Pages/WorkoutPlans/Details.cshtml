@page
@model GymMaster_RazorPages.Pages.WorkoutPlans.DetailsModel

@{
    ViewData["Title"] = "🔍 Workout Plan Details";
}

<div class="container mt-5">
    <h1 class="text-center text-info mb-4">
        <i class="bi bi-eye-fill"></i> Workout Plan Overview
    </h1>

    <div class="card shadow-sm border-info">
        <div class="card-header bg-info bg-opacity-10 fw-bold">
            <i class="bi bi-clipboard-data"></i> Plan Information
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-md-3"><i class="bi bi-calendar-week"></i> Day</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.WorkoutPlan.DayOfWeek)</dd>

                <dt class="col-md-3"><i class="bi bi-dumbbell"></i> Exercise</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.WorkoutPlan.ExerciseName)</dd>

                <dt class="col-md-3"><i class="bi bi-repeat"></i> Sets</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.WorkoutPlan.Sets)</dd>

                <dt class="col-md-3"><i class="bi bi-arrow-repeat"></i> Reps</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.WorkoutPlan.Reps)</dd>

                <dt class="col-md-3"><i class="bi bi-scales"></i> Weight</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.WorkoutPlan.WeightDescription)</dd>

                <dt class="col-md-3"><i class="bi bi-chat-left-text"></i> Notes</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.WorkoutPlan.Notes)</dd>

                <dt class="col-md-3"><i class="bi bi-journal-text"></i> Assignment ID</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.WorkoutPlan.Assignment.AssignmentId)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 text-end">
        <a asp-page="./Edit" asp-route-id="@Model.WorkoutPlan.PlanId"
           class="btn btn-primary rounded-pill shadow-sm me-2">
            <i class="bi bi-pencil-fill"></i> Edit
        </a>
        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill shadow-sm">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>
