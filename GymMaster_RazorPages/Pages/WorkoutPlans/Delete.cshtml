@page
@model GymMaster_RazorPages.Pages.WorkoutPlans.DeleteModel

@{
    ViewData["Title"] = "🗑️ Delete Workout Plan";
}

<div class="container mt-5">
    <h1 class="text-center text-danger mb-3">
        <i class="bi bi-trash-fill"></i> Confirm Deletion
    </h1>
    
    <div class="alert alert-warning text-center fw-semibold">
        <i class="bi bi-exclamation-triangle-fill text-danger"></i>
        Are you sure you want to delete this workout plan?
    </div>

    <div class="card border-danger shadow-sm mb-4">
        <div class="card-header bg-danger bg-opacity-10 fw-bold">
            <i class="bi bi-clipboard-data"></i> Workout Plan Details
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3"><i class="bi bi-calendar-week"></i> Day</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.WorkoutPlan.DayOfWeek)</dd>

                <dt class="col-sm-3"><i class="bi bi-dumbbell"></i> Exercise</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.WorkoutPlan.ExerciseName)</dd>

                <dt class="col-sm-3"><i class="bi bi-repeat"></i> Sets</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.WorkoutPlan.Sets)</dd>

                <dt class="col-sm-3"><i class="bi bi-arrow-repeat"></i> Reps</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.WorkoutPlan.Reps)</dd>

                <dt class="col-sm-3"><i class="bi bi-scales"></i> Weight</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.WorkoutPlan.WeightDescription)</dd>

                <dt class="col-sm-3"><i class="bi bi-chat-left-text"></i> Notes</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.WorkoutPlan.Notes)</dd>

                <dt class="col-sm-3"><i class="bi bi-journal-text"></i> Assignment ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.WorkoutPlan.Assignment.AssignmentId)</dd>
            </dl>
        </div>
    </div>

    <form method="post" class="text-end">
        <input type="hidden" asp-for="WorkoutPlan.PlanId" />
        <button type="submit" class="btn btn-danger rounded-pill fw-bold shadow-sm">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-page="/Dashboard/TrainerDashboard" class="btn btn-outline-secondary rounded-pill ms-2 shadow-sm">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </form>
</div>
